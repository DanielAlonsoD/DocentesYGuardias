<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocentesYGuardias" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_cello</item>
        <item name="colorPrimaryVariant">@color/green_mantis</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_mirage</item>
        <item name="toolbarStyle">@style/TopAppBar.Dark</item>
        <item name="iconTint">@color/black</item>
        <item name="buttonStyle">@style/Buttons.Dark</item>
        <item name="floatingActionButtonStyle">@style/FloatingButton.Dark</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingButton.Dark</item>
        <item name="textInputStyle">@style/TextInputs.Dark</item>
        <item name="android:textViewStyle">@style/TextView.Dark</item>
        <item name="dropDownListViewStyle">@style/Spinner.Dark</item>
        <item name="imageButtonStyle">@style/ImageButton.Dark</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation.Dark</item>
    </style>

    <style name="TopAppBar.Dark" parent="TopAppBar">
        <item name="android:background">@color/green_mantis</item>
        <item name="navigationIconTint">@color/blue_mirage</item>
        <item name="titleTextColor">@color/blue_mirage</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Buttons.Dark" parent="Buttons">
        <item name="android:backgroundTint">@color/green_mantis</item>
        <item name="android:textColor">@color/blue_mirage</item>
    </style>

    <style name="FloatingButton.Dark" parent="FloatingButton">
        <item name="android:backgroundTint">@color/green_mantis</item>
        <item name="android:tint">@color/blue_mirage</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
    </style>

    <style name="ExtendedFloatingButton.Dark" parent="ExtendedFloatingButton">
        <item name="android:backgroundTint">@color/green_mantis</item>
        <item name="android:tint">@color/blue_mirage</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
    </style>

    <style name="TextInputs.Dark" parent="TextInputs">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/cyan_cello</item>
        <item name="boxStrokeColor">@color/green_mantis</item>
        <item name="hintTextColor">@color/green_mantis</item>
        <item name="cursorColor">@color/white</item>
    </style>

    <style name="TextView.Dark" parent="TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Spinner.Dark" parent="Spinner">
        <item name="android:background">@color/blue_mirage</item>
    </style>

    <style name="ImageButton.Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/blue_mirage</item>
    </style>

    <style name="BottomNavigation.Dark" parent="BottomNavigation">
        <item name="backgroundTint">@color/green_mantis</item>
    </style>
</resources>