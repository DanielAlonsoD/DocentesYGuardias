<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocentesYGuardias" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_tree_poppy</item>
        <item name="colorPrimaryVariant">@color/cyan_st_tropaz</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/cyan_danube</item>
        <item name="toolbarStyle">@style/TopAppBar</item>
        <item name="iconTint">@color/white</item>
        <item name="android:buttonStyle">@style/Buttons</item>
        <item name="floatingActionButtonStyle">@style/FloatingButton</item>
        <item name="textInputStyle">@style/TextInputs</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="TopAppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/cyan_azure</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/cyan_azure</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/cyan_azure</item>
        <item name="android:tint">@color/white</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="TextInputs" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/orange_tree_poppy</item>
        <item name="hintTextColor">@color/orange_tree_poppy</item>
        <item name="cursorColor">@color/black</item>
    </style>
    
    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="itemIconSize">45dp</item>
        <item name="backgroundTint">@color/cyan_azure</item>
        <item name="shapeAppearance">@style/Widget.Material3.BottomNavigationView</item>
    </style>

</resources>