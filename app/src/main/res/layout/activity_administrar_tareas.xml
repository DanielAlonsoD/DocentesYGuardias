<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutAdministrarTareas"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministrarTareasActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/encabezadoAdministrarTareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/textoAdministrarTareas"/>

    <ListView
        android:id="@+id/listaTareas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/encabezadoAdministrarTareas"/>

</RelativeLayout>