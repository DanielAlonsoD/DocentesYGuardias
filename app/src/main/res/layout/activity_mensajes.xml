<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutMensajes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensajesActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/encabezadoMensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/textoMensajes"
        app:titleCentered="true"
        app:navigationIcon="@drawable/arrow_back"/>

    <ListView
        android:id="@+id/listaMensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/encabezadoMensajes"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonCrearMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/add"
        app:maxImageSize="30dp"/>

</RelativeLayout>